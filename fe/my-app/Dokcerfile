# frontend/Dockerfile
FROM node:14-alpine

# 작업 디렉토리 설정
WORKDIR /app

# 의존성 설치
COPY package.json /app/
RUN npm install

# 프로젝트 코드 복사
COPY . /app/

# 애플리케이션 빌드
RUN npm run build

# 정적 파일을 제공하는 NGINX를 사용
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
